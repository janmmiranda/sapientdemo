package com.sapient;

public class Payment {
	
	Sms sms;
	TransactionRepo repo;
	
	public boolean fundsTransfer(int debitAccount, int creditAccount, double amount){
		
		// Credit
		repo.transact(creditAccount, amount);
		
		// Debit
		
		
		//SMS 
		if(sms.sendMessage("Transfered: " + amount + " to your account: " + creditAccount)){
			return true;
		}
		
		
		return false;
		
	}

}
