package com.sapient;

public class Payment {
	
	Sms sms;
	TransactionRepo repo;
	
	
	
	public Payment(Sms sms, TransactionRepo repo) {
		super();
		this.sms = sms;
		this.repo = repo;
	}



	public boolean fundsTransfer(int debitAccount, int creditAccount, double amount){
		
		// Credit
		boolean result = repo.transact(creditAccount, amount);
		
		// Debit
		
		
		//SMS 
		if(result && sms.sendMessage("Transfered: " + amount + " to your account: " + creditAccount)){
			return true;
		}
		
		
		return false;
		
	}

}
