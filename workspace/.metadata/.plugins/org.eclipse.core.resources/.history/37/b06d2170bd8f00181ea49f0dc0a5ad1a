import org.junit.Test;

public class TestCalc {

	@Test
	public void testAdd() {
//		fail("Not yet implemented");
		Calc calc = new Calc();
		int result = calc.sum(1,2,3);
		assertEquals(6, result);
	}
	
	@Test
	public void testMultiply() {
//		fail("Not yet implemented");
		Calc calc = new Calc();
		int result = calc.mul(1,2,3);
		assertEquals(6, result);
	}
	
	@Test
	public void testMultiply() {
//		fail("Not yet implemented");
		Calc calc = new Calc();
		int result = calc.mul(-1,-2,3);
		assertEquals(6, result);
	}

}
